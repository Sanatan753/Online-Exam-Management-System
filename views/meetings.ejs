<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Actions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            max-width: 400px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        h1 {
            margin-bottom: 20px;
            text-align: center;
        }
        label {
            display: block;
            margin-bottom: 10px;
        }
        input[type="text"] {
            width: 100%;
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 20px;
            box-sizing: border-box;
        }
        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Meeting Actions</h1>
        <label for="createMeeting">Create a Meeting:</label>
        <input type="text" id="createMeeting" placeholder="Enter meeting details">
        <label for="joinMeeting">Join a Meeting:</label>
        <input type="text" id="joinMeeting" placeholder="Enter meeting ID or link">
        <button id="createMeetingBtn">Create Meeting</button>
        <button id="joinMeetingBtn">Join Meeting</button>
    </div>

    <script>
        const createMeetingBtn = document.getElementById('createMeetingBtn');
        const joinMeetingBtn = document.getElementById('joinMeetingBtn');

        createMeetingBtn.addEventListener('click', () => {
            const createMeetingInput = document.getElementById('createMeeting');
            const meetingDetails = createMeetingInput.value.trim();
            if (meetingDetails) {
                window.location.href = `/create-meeting?details=${encodeURIComponent(meetingDetails)}`;
            } else {
                alert('Please enter meeting details');
            }
        });

        joinMeetingBtn.addEventListener('click', () => {
            const joinMeetingInput = document.getElementById('joinMeeting');
            const meetingID = joinMeetingInput.value.trim();
            if (meetingID) {
                window.location.href = `/join-meeting?id=${encodeURIComponent(meetingID)}`;
            } else {
                alert('Please enter meeting ID or link');
            }
        });
    </script>
</body>
</html>
